@model Blog.EntitesLayer.Concrate.Category
@{
    ViewBag.Title = "CategoryForm";
    Layout = "~/Views/Shared/_UserPanelLayout.cshtml";

    string btnText = "Ekle";
}

@*  Eğer model boş ise ozaman yeni bir category ekleme yapıcam...
    Eğer Category boş değil ise category güncelleme yapıcam *@

<div class="col-lg-8  col-md-10 col-sm-12 mx-auto">
    @if (Model.CategoryId == 0)
    {
        <h2 class="text-white text-center  mt-2 border border-3 border-danger" style="background: #343A40"> Kategori Ekleme</h2>
    }
    else
    {
        <h2 class="text-white text-center mt-2 border border-3 border-danger" style="background: #343A40"> Kategori Güncelleme </h2>
        btnText = "Güncelle";
    }
    
    
    @using (Html.BeginForm("Save", "Category", FormMethod.Post))
    {
        @Html.HiddenFor(x=>x.CategoryId)
        @Html.HiddenFor(x=>x.CategoryStatus)
        <div class="form-group">
            @Html.LabelFor(x=>x.CategoryName)
            @Html.TextBoxFor(x=>x.CategoryName,new {@class="form-control"})
        </div>
        <button class="btn btn-success" type="submit"> @btnText</button>
    }
</div>

