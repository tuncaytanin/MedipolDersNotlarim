@model Blog.EntitesLayer.Concrate.User
@{
    ViewBag.Title = "FormUser";
    Layout = "~/Views/Shared/_UserPanelLayout.cshtml";
}


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title ">Profil Sayfası</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    
    @using (Html.BeginForm("FormUser", "User", FormMethod.Post))
    {


    <div class="card-body">

         @Html.HiddenFor(x=>x.UserId)
         <div class="form-group">
             @Html.LabelFor(x => x.UserName)
             @Html.TextBoxFor(x => x.UserName, new {@class = "form-control", placeholder = "Adınızı Giriniz"})
         </div>
            <div class="form-group">
                @Html.LabelFor(x=>x.UserLastName)
                @Html.TextBoxFor(x=>x.UserLastName,new {@class="form-control" ,placeholder="Soyadınızı Giriniz"})
            </div>

         <div class="form-group">
             @Html.LabelFor(x=>x.UserEmail)
             @Html.TextBoxFor(x=>x.UserEmail,new {@class="form-control",type="email",placeholder="Email Adresinizi Giriniz"})
         </div>
         <div class="form-group">
             @Html.LabelFor(x=>x.UserPassword)
             @Html.TextBoxFor(x=>x.UserPassword,new {@class="form-control",type="password"})
         </div>
            <div class="form-group">
                <label for="exampleInputFile">Profil Resminizi Giriniz</label>
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="exampleInputFile">
                        <label class="custom-file-label" for="exampleInputFile">Dosya Seç</label>
                    </div>
                    <div class="input-group-append">
                        <span class="input-group-text">Yükle</span>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    }
</div>