@model Blog.WebMvc.ViewModels.BlogNewViewModel
@{
    ViewBag.Title = "FormBlog";
    Layout = "~/Views/Shared/_UserPanelLayout.cshtml";
    string islem = "";
    if (Model.Post.PostId == 0)
    {
        islem = "Ekle";
    }
    else
    {
        islem = "Güncelle";
    }
}


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title ">Blog @islem  Sayfası</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->

    @using (Html.BeginForm("AddOrUpdate", "Blog", FormMethod.Post))
    {


<div class="card-body">

    @Html.HiddenFor(x => x.Post.PostId)
    @Html.HiddenFor(x => x.Post.PhotoId)
    @Html.HiddenFor(x => x.Post.WriterId)
    @Html.HiddenFor(x => x.Post.CreateDate)
    <div class="form-group">
        @Html.LabelFor(x => x.Post.Category.CategoryName)
        @Html.DropDownListFor(x => x.Post.CategoriId, new SelectList(Model.Categories, "CategoryId", "CategoryName"), "Kategoriyi Seçiniz", new { @class = "form-control", placeholder = "Başlığı giriniz" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Post.PostTitle)
        @Html.TextBoxFor(x => x.Post.PostTitle, new { @class = "form-control", placeholder = "Başlığı giriniz" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Post.PostContent)
        @Html.TextAreaFor(x => x.Post.PostContent, new { @class = "form-control", placeholder = "Açıklamayı giriniz", rows = 15 })
    </div>
</div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">@islem</button>
        </div>
    }
</div>



