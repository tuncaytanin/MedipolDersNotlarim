
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}



    <section class="main-content-w3layouts-agileits">

        <h3 class="tittle">İletişim</h3>
        <p class="sub text-center">Bizim ile fikirlerinizi paylaşmanız çok değerli</p>
        <div class="contact-map inner-sec">


            <div class="embed-responsive embed-responsive-21by9 m-2">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3006.9885238437846!2d29.089354851916355!3d41.09109737919085!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14caca3524ebaebd%3A0x7293ade89084517e!2sKavac%C4%B1k%2C%20Ekinciler%20Cd.%20No%3A19%2C%2034810%20Beykoz%2F%C4%B0stanbul!5e0!3m2!1str!2str!4v1648733665472!5m2!1str!2str" 
                        class="embed-responsive-item"></iframe>
            </div>


        </div>
        <div class="ad-inf-sec bg-light">
            <div class="container">
                <div class="address row mt-2 p-2">

                    <div class="col-lg-4 address-grid">
                        <div class="row address-info">
                            <div class="col-md-4 address-left text-center">
                                <i class="far fa-map"></i>
                            </div>
                            <div class="col-md-8 address-right text-left">
                                <h6>Adres</h6>
                                <p>
                                    İstanbul , Türkiye

                                </p>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-4 address-grid ">
                        <div class="row address-info">
                            <div class="col-md-4 address-left text-center">
                                <i class="far fa-envelope"></i>
                            </div>
                            <div class="col-md-8 address-right text-left">
                                <h6>Email</h6>
                                <p>
                                    <a href="mailto:blogmvc@email.com"> blogmvc@gmail.com</a>

                                </p>
                            </div>

                        </div>
                    </div>
                    <div class="col-lg-4 address-grid">
                        <div class="row address-info">
                            <div class="col-md-4 address-left text-center">
                                <i class="fas fa-mobile-alt"></i>
                            </div>
                            <div class="col-md-8 address-right text-left">
                                <h6>Telefon</h6>
                                <p>+90 234 567 8901</p>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="contact_grid_right">
                <form action="/Contact/Iletisim/" method="post">
                    <div class="row contact_left_grid">
                        <div class="col-md-6 con-left">
                            <div class="form-group">
                                <label for="validationCustom01 my-2">Adınız </label>
                                <input class="form-control" type="text" name="Name" placeholder="" required="">
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlInput1">Email</label>
                                <input class="form-control" type="email" name="Email" placeholder="" required="">
                            </div>
                            <div class="form-group">
                                <label for="validationCustom03 my-2">Konu</label>
                                <input class="form-control" type="text" name="Subject" placeholder="" required="">
                            </div>
                        </div>
  
                        <div class="col-md-6 con-right">
                            <div class="form-group">
                                <label for="textarea">Mesajınız</label>
                                <textarea id="textarea" placeholder="" class="form-control" rows="8"></textarea>
                            </div>
                            <input class="form-control btn btn-success" type="submit" value="Submit">

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>



